<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ifox.android.lab">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Acitivity.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Acitivity.ShowEduActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Acitivity.ShowNewsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Acitivity.MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".video.Activity.SearchVideoListActivity" />
        <activity
            android:name=".video.Activity.VideoShowActivity"
            android:configChanges="orientation|screenSize|screenLayout" />
        <activity android:name=".video.Activity.SearchActivity" />
        <activity android:name=".video.Activity.DownLoadActivity" />
        <activity android:name=".video.Activity.LocalVideoPlayActivity"></activity>
    </application>

</manifest>